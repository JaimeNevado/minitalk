CFLAGS = -Wall -Wextra -Werror

CLIENT = client

SERVER = server

LIBFT = libft/libft.a

INC = -I libft

all: $(CLIENT) $(SERVER)

$(CLIENT): $(LIBFT) client.c
	@gcc $(CFLAGS) $(INC) -o $(CLIENT) client.c $(LIBFT)

$(SERVER): $(LIBFT) server.c
	@gcc $(CFLAGS) $(INC) -o $(SERVER) server.c $(LIBFT)

$(LIBFT):
	@make -C libft
	@echo	"                                                                                           "
