clean:
	@make -C libft clean
	@echo "******************************"
	@echo üìñ Deleting libft *.o files üìñ
	@echo "******************************"

fclean: clean
	@make -C libft fclean
	@rm -rf $(CLIENT) $(SERVER)
	@echo "******************"
	@echo üöÄ Deleting all üöÄ
	@echo "******************"


RM = rm -rf

.PHONY: all bonus libft printf clean fclean re
